<node id="editor"
      parent="editorcontainer"
      controller="editor"
      forward="canvas.layer=layer, canvas.frame=frame, canvas.document=doc, canvas.timeline=timeline"
      visible="false"
      overflow-hidden="true"
      grid="false"
      grid-color="rgba{32,32,200,200}"
      draggable="false"
      steal-focus="true">
  <image controller="draggable" visible="true" id="container" slice="1 1" src="%skin/editor.png" absolute="true">
    <canvas id="canvas" inputEnabled="false"/>
  </image>
  <image id="gridoverlay" src="new:1x1:a{0}" absolute="true" width="100%" height="100%"/>
  <image id="tooloverlay" src="new:1x1:a{0}" absolute="true" width="100%" height="100%"/>
</node>
